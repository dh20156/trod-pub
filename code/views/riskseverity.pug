extends layout

block content

    div(class="grey lighten-2" id="main")
        div(class="row")
            div(class="m10 offset-m1 s12 col")
                div(class="row")
                    div(class="m8 col")
                        h4 风险等级为#{severity}级别的风险数据
                        ul
                            each v in summary
                                li <a href="/risk/item/#{v.id}">#{v.risk}</a>

                        p(class="flow-text") <a href="/risk" class="grey-text">查看所有风险数据</a>

                    
                    div(class="s12 m4 col")
                        div(class="lighten-1")
                            h5(class="top-margin") 风险等级
                            ul
                                each v,k in data
                                    li <a href="/risk/severity/#{k}">#{k}</a>
                            
