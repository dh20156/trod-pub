extends layout

block content

    div(class="grey lighten-2" id="main")
        div(class="row")
            div(class="m10 offset-m1 s12 col")
                div(class="row")
                    div(class="m8 col")
                        if stack
                            h4 #{field}/#{stack}领域的技术风险数据
                            ul
                                each d in data
                                    li <a href="/risk/item/#{d.id}">#{d.risk}</a>
                        else
                            h4 #{field}领域的技术风险数据
                            each v,k in data
                                <h5 class="top-margin"><i class="mdi-action-stack"></i> #{k}</h5>
                                ul
                                    each x in v
                                        li <a href="/risk/item/#{x.id}">#{x.risk}</a>

                        p(class="flow-text") <a href="/risk" class="grey-text">查看所有风险数据</a>
                    
                    div(class="s12 m4 col")
                        div(class="lighten-1")
                            h5(class="top-margin") 技术领域
                            each j,i in risk
                                p <a href="/risk/field/#{i}">#{i}</a>
                                ul
                                    each n,m in j
                                        li <a href="/risk/field/#{i}/#{m}">#{m}</a>
                            
